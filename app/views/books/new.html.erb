<% provide(:title, 'Sign up') %>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<h3>Add Book</h3>
<%= form_for(@book) do |f| %>
<%= f.label :book_title %>
<%= f.text_field :book_title %>
<%= f.label :author %>
<%= f.email_field :author %>
<%= f.label :category %>
<%= f.password_field :category %>
<%= f.label :isbn %>
<%= f.email_field :isbn %>
<%= f.label :status %>
<%= f.email_field :status %>
<%= f.submit "Submit" %>
<% end %>
</div>
</div>
